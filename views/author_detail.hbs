<h1>Author: {{author.name}}</h1>
<p>{{author.lifespan}}</p>
<div style="margin-left:20px; margin-top:20px">
  <h4>Books</h4>
  <dl>
    {{#each author_books}}
      <dt><a href={{url}}>{{title}}</a></dt>
      <dd>{{summary}}</dd>
    {{/each}}
    {{#unless author_books}}
      <p>This author has no books</p>
    {{/unless}}
  </dl>
</div>
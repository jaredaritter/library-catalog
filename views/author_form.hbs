<h1>{{title}}</h1>
<form action="" method="POST">
  <div class="form-group">
    <label for="first_name">First Name:</label>
    <input type="text" id="first_name" class="form-control" placeholder="First name" name="first_name" value="{{author.first_name}}" required>
    <label for="family_name">Family Name:</label>
    <input type="text" id="family_name" class="form-control" placeholder="Family name" name="family_name" value="{{author.family_name}}" required>
  </div>
  <div class="form-group">
    <label for="date_of_birth">Date of birth:</label>
    <input type="date" id="date_of_birth" class="form-control" name="date_of_birth" value="{{author.date_of_birth}}">
     <label for="date_of_death">Date of death:</label>
     <input type="date" id="date_of_death" class="form-control" name="date_of_death" value="{{author.date_of_death}}">
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
  {{#if errors}}
    <ul>
      {{#each errors}}
        <li>{{msg}}</li>
      {{/each}}
    </ul>
  {{/if}}
</form>
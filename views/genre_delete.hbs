<h1>{{title}}: {{genre.name}}</h1>

{{#if genre_books.length}}
  <p><strong>Delete the following books before attempting to delete this author.</strong></p>
  <div style="margin-left: 20px; margin-top: 20px;">
    <h4>Books</h4>
    <dl>
      {{#each genre_books}}
        <dt>
          <a href="{{url}}">{{title}}</a>
        </dt>
        <dd>{{summary}}</dd>
      {{/each}}
    </dl>
  </div>
{{else}}
  <p>Do you really want to delete this Genre?</p>
  <form action="" method="POST">
    <div class="form-group">
      <input type="hidden" id="genreid" class="form-control" name="genreid" required value="{{genre._id}}">
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
  </form>
{{/if}}
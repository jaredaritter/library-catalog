<h1>{{title}}: {{book.name}}</h1>

{{#if bookinstances.length}}
  <p><strong>Delete the following book instances before attempting to delete this book.</strong></p>
  <div style="margin-left: 20px; margin-top: 20px;">
    <h4>Book Instances</h4>
    <dl>
      {{#each bookinstances}}
      <dt>
        <a href="{{url}}">{{_id}}</a>
      </dt>
      <dd>{{imprint}} - {{status}}</dd>
      {{/each}}
    </dl>
  </div>
{{else}}
  <p>Do you really want to delete this Book?</p>
  <form action="" method="POST">
    <div class="form-group">
      <input type="hidden" id="bookid" class="form-control" name="bookid" required value="{{book._id}}">
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
  </form>
{{/if}}